<div id="content_hero" style="background-image: url(images/hero-contact.jpg)">

    <div class="container">
        <div class="row blurb scrollme animateme" data-when="exit" data-from="0" data-to="1" data-opacity="0"
            data-translatey="100">
            <div class="col-md-9">

                <h1> Registro de Salas :)</h1>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<div class="container section small-padding">
    <form id="register-form" class="login" method="POST" action="/proyeccion/guardar">
        <div class="field-wrap">

            <div>
                {{#if error2 }}
                <div class="label label-danger" style="font-size: 18px" id="err">
                    {{error2}}
                </div>
                {{/if}}
            </div><br><br>

            <div>
                <label for="">Sala</label>

                <select name="sala" id="sala">

                    <option value="">-------Eliga una opcion--------</option>
                    {{#each listas}}
                    <option value="{{this.external_id}}">{{this.nombre_sala}}</option>
                    {{/each}}
                    </option>
                </select>
                <label for="">Peliculas</label>

                <select name="peliculas" id="peliculas">

                    <option value="">-------Eliga una opcion--------</option>
                    {{#each listap}}
                    <option value="{{this.external_id}}">{{this.nombre_peli}}</option>
                    {{/each}}
                    </option>
                </select>
                <label for="">Ingrese hora inicio</label>
                <input type="time" placeholder="Apellidos" name="inicio" id="inicio" class="login__input" />
                <label for="">Ingrese hora fin</label>
                <input type="time" placeholder="Apellidos" name="fin" id="fin" class="login__input" />
            </div>

            <label for="">Fecha de proyeccion</label>
            <input type="date" placeholder="Apellidos" name="fecha" id="fecha" class="login__input" />
        </div><br>

</div>
</div>

</div>





<div class="form" style="text-align: right">
    <br>
    <a type='' id="reg" href="/" class="btn btn-danger" value="">Cancelar</a>
    <button type='submit' id="reg" class="btn btn-success" value="submit">Registrarse</button>
</div>
</form>

</div>